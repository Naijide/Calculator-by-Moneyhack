            padding: 10,10
            size_hint: 0.9,0.9
            TextInput:
                id: entry
                font_size: '0.3cm'
                multiline: False
        GridLayout:
            cols: 4
            spacing:12,12
            padding:10,10
            Label:
            Label:
            Label:
            Button:
                text: 'AC'
                font_size: '0.3cm'
                on_press: entry.text = ""
        GridLayout:
            cols:4
            spacing:12,12
            padding: 10,10
            Button:
                text:'7'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'8'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'9'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'+'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            
        GridLayout:
            cols:4
            spacing:12,12
            padding: 10,10
            Button:
                text:'4'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'5'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'6'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'-'
                font_size: '0.3cm'
                on_press: entry.text += self.text
        GridLayout:
            cols:4
            spacing:12,12
            padding: 10,10
            Button:
                text:'1'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'2'
                font_size:'0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'3'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'*'
                font_size: '0.3cm'
                on_press: entry.text += self.text
        GridLayout:
            cols:4
            spacing:12,12
            padding: 10,10
            Button:
                text:'0'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'.'
                font_size: '0.3cm'
                on_press: entry.text += self.text
            Button:
                text:'='
                font_size: '0.3cm'
                on_press: root.calculate(entry.text)
            Button:
                text:'/'
                font_size: '0.3cm'
                on_press: entry.text += self.text





