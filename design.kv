                    on_press: root.back_to_home()
                    pos_hint: {'center_x':0.8, 'center_y':0.5}
        GridLayout:
            cols: 1
            size_hint: 0.1,0.1
            Label:
                text: "Mortgage Payments"
                font_size: '0.3cm'
        GridLayout:
            cols: 2
            padding: 20
            Label:
                text: "Home Price"
                font_size: '0.3cm'
            Label:

            TextInput:
                id: homeprice
                font_size: '0.3cm'
                size_hint: 5,1
            Label:
                text: "$"
                font_size: '0.3cm'
            
            Label:
                text: "Down Payment"
                font_size: '0.3cm'
            Label:
                text: ""

            TextInput:
                id: downpayment
                font_size: '0.3cm'
            Label:
                text: "%"
                font_size: '0.3cm'
            
            Label:
                text: "Interest Rate"
                font_size: '0.3cm'
            Label:
                text: ""

            TextInput:
                id: rate
                font_size: '0.3cm'
            Label:
                text: "%"
                font_size: '0.3cm'
            
            Label:
                text: "Period"
                font_size: '0.3cm'
            Label:
                text: ""

            TextInput:
                id: period
                font_size: '0.3cm'
            Label:
                text: "yr"
                font_size: '0.3cm'

            Label:
                text: "Property Taxes (optional)"
                font_size: '0.3cm'
            Label:
                text: ""

            TextInput:
                id: prop_taxes
                font_size: '0.3cm'
            Label:
                text: "%"
                font_size: '0.3cm'

            
        GridLayout:
            cols: 1
            size_hint: 0.4,0.4
            ScrollView:
                Label:
                    id: answer
                    text: ""
                    text_size: self.width - 50, None
                    size_hint_y: None
                    font_size: '0.3cm'
                    height: self.texture_size[1]
            RelativeLayout:
                Button:
                    text: "Calculate"
                    font_size: '0.3cm'
                    size_hint: 0.6,0.6
                    pos_hint: {'center_x':0.5, 'center_y':0.6}
                    on_press: root.calculate(root.ids.homeprice.text, root.ids.downpayment.text, root.ids.rate.text, root.ids.period.text, root.ids.prop_taxes.text)


        

